---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const experiences: Array<{ title: string; desc: string; org: string; href: string }> = [
	{
		title: "Site Reliability Engineering Intern",
		org: "Visier",
		desc: "Winter 2024",
		href: "https://astro.build",
	},
	{
		title: "Software Engineering Intern",
		org: "Vidyard",
		desc: "Winter 2023",
		href: "https://docs.astro.build/en/guides/assets/",
	},
];

const projects: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "Backtrack",
		desc: "A generalized search library for node.js",
		href: "#",
	},
	{
		title: "Star-Crossed",
		desc: "A 2D top-down bullet hell (and dating sim?) in Unity",
		href: "#",
	},
	{
		title: "Basis",
		desc: "A linear algebra library for C",
		href: "#",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hey! I'm Arpit.</h1>
		<p class="mb-4">
			I am a computer science and mathematics student at the University of British Columbia. Here I
			write about my explorations in topics that interest me - usually pertaining to computer
			science and mathematics.
			<br />
			<br />
			 I'm interested in learning about system design, language-oriented programming and graphics.
			In my free time, I'm exploring game development in Unity at <span class="cactus-link"
				>UBC GameDev</span
			> and contributing to
			<span class="cactus-link">UBC Bionics</span> as an embedded software developer.
		</p>
		<SocialList />
	</section>
	<section class="mt-10">
		<h2 class="title mb-4 text-xl">Experience</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				experiences.map(({ href, title, org, desc }) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<p class="min-w-[120px] text-gray-600 dark:text-gray-400">{desc}</p>
						<p>
							{title}
							<a
								href={href}
								target="_blank"
								rel="noopener noreferrer"
								class="cactus-link inline-block"
							>
								@{org}
							</a>
						</p>
					</li>
				))
			}
		</ul>
	</section>

	<section class="mt-10">
		<h2 class="title mb-4 text-xl">Featured Projects</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				projects.map(({ title, desc, href }) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<div class="min-w-[120px]">
							<a
								href={href}
								target="_blank"
								rel="noopener noreferrer"
								class="cactus-link inline-block"
							>
								{title}
							</a>
						</div>
						<p>{desc}</p>
					</li>
				))
			}
		</ul>
	</section>

	<section aria-label="Blog post list" class="mt-10">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
